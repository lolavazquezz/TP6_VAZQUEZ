<link rel="stylesheet" href="site.css">
<form class="form" style="clear:both" method="post" action='@Url.Action("guardarCandidato")'>
    <p>Nombre:
    <input type="text" name="nombre" required></p> 
    <p>Apellido: 
    <input type="text" name="apellido" required></p>
    <p>Fecha de Nacimiento: 
    <input type="DateTime" name="fechaNacimiento" placeholder="dd/mm/aaaa" required></p>
    <p>Postulacion: 
    <input type="text" name="postulacion" required></p>
    <p>Foto: 
    <input type="text" name="foto" required></p>
    <input type="hidden" name="idPartido" value="@ViewBag.idPartido">
    <br>
    <input type="submit" value="Guardar" class="btn btn-success" >
</form>
<a href='@Url.Action("verDetallePartido", new {idPartido=ViewBag.idPartido})' class="btn btn-primary">Volver</a>
